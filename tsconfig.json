{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "nodenext",
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "baseUrl": ".",
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"]
}
